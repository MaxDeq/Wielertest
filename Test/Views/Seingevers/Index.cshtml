@using System.Collections.Specialized
@model IEnumerable<Test.Models.Signalman>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SignalmanId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SignalmanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
	        <td>
		        @Html.ActionLink("Edit", "Edit", new { id = item.SignalmanId }, new { @class = "btn btn-primary btn-sm" })
		        @Html.ActionLink("Delete", "Delete", new { id = item.SignalmanId }, new { @class = "btn btn-danger btn-sm" })

	        </td>
        </tr>
}
    </tbody>
</table>