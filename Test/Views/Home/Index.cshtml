@model IEnumerable<Test.Models.Signalman>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.LocationId.ToString(), "Edit", "Locaties", new { id = item.LocationId })
            </td>
            <td>
	            @Html.ActionLink(item.Name, "Edit", "Seingevers", new { id = item.SignalmanId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
        </tr>
}
    </tbody>
</table>
